<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBagroundSplash"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="@dimen/paddingLayout"
    tools:context="com.sinau.simikmiriskina.SpalshScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SISTEM INFORMASI IKMI RISKINA"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program Pendidikan Profesional Bersertifikasi
        Internasional"
        android:textAlignment="center"
        android:layout_marginTop="5dp" />


</LinearLayout>
